@model CapaEntidad.reporte_usuario


@{
    ViewBag.Title = "Reporte";

    //Sessiones para obtener los ids para crea un reporte
    Session["Id_usario_reporte"] = Model.ID_usuario_reporte;
    Session["Id_usuario_reportado"] = Model.ID_usuario_reportado;
    Session["Id_publicacion"] = Model.ID_publicacion;
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div style="margin-top: 50px;" class="d-flex flex-column align-items-center">
        <div style="width: 400px;" class="d-flex flex-column align-items-center shadow-lg p-3 mb-5 bg-body rounded">
            <h2>Reporte</h2>
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })

            <!-- Message input -->
            <div class="form-outline mb-4">
                <div class="">
                    <textarea class="form-control" id="descripcion" name="descripcion" rows="10" cols="70" placeholder="Descripcion"></textarea>
                    @Html.ValidationMessageFor(Model => Model.descripcion, "", new { @class = "text-danger" })
                </div>
            </div>
            <!-- Submit button -->
            <div class="d-flex flex-column align-items-center">
                <div class="">
                    <input style="width: 180px; margin: 5px;" type="submit" value="Enviar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    </div>
    }
}
@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
