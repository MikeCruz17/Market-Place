@model CapaEntidad.CATEGORIA

@{ ViewBag.Title = "AgregarCategoria";
    Layout = "~/Views/Shared/_BarraNavAdmin.cshtml";
    }

@using (Html.BeginForm())
{
@Html.AntiForgeryToken()
                <div style="margin-top: 50px;" class="d-flex flex-column align-items-center">
                    <div style="width: 400px;" class="d-flex flex-column align-items-center shadow-lg p-3 mb-5 bg-body rounded">
                        <h4>NUEVA CATEGORIA</h4>
                        <hr />
                        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                        <div class="form-group">
                            <div style="margin: 5px;" class="col-md-15">
                                @Html.LabelFor(model => model.ID, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.ID, new { htmlAttributes = new { @class = "form-control" } })
                            </div>

                            <div style="margin: 5px;" class="col-md-15">
                                @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })


                                @Html.ValidationMessageFor(model => model.ID, "", new { @class = "text-warning bg-dark" })
                                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-warning bg-dark" })
                            </div>
                        </div>

                        <div class="form-group">
                            <div class="col-md-offset-2 col-md-10">
                                <input style="width: 207px; margin: 5px;" type="submit" value="AGREGAR" class="btn btn-primary" />
                            </div>
                        </div>
                        <div>
                            <span style="width: 207px;">@Html.ActionLink("REGRESAR", "DashBoard", "Home", new { @class = "btn btn-secondary" })</span>
                        </div>
                    </div>
                </div>}
