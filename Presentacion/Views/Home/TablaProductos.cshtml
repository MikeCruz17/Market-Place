@model IEnumerable<CapaEntidad.PRODUCTO>

@{
    ViewBag.Title = "TablaProductos";
    Layout = "~/Views/Shared/_SearchBarTable.cshtml";
}

<div style="padding: 100px;" class="d-flex flex-column align-items-center">
    <h2>Tabla Productos</h2>

    <div style="width: 100%;" class="d-flex flex-row justify-content-end">
        <div style="margin: 5px;">@Html.ActionLink("AÑADIR", "AgregarProducto", "Home", new { @class = "btn btn-primary" })</div>
    </div>
    <table class="table table-striped table-hover">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Nombre)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_USUARIO)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Precio)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ID_Categoria)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Descripcion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Estado)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Ubicacion)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Fecha_Registro)
            </th>
            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr class="Search">
                <td>
                    @Html.DisplayFor(modelItem => item.Nombre)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_USUARIO)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Precio)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ID_Categoria)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Descripcion)
                </td>
                <td>
                    @{
                        if (item.Estado != 1)
                        {
                            <span>Deshabilitado</span>
                        }
                        else
                        {
                            <span>Habilitado</span>
                        }
                    }
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Ubicacion)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Fecha_Registro)
                </td>
                <td>
                    @Html.ActionLink("EDITAR", "EditarProductos", new { id = item.ID }, new { @class = "btn btn-warning" }) |
                    @Html.ActionLink("DESHABILITAR", "DeshabilitarProductos", new { id = item.ID }, new { @class = "btn btn-danger" })
                </td>
            </tr>
        }

    </table>
</div>