@model CapaEntidad.USUARIO

@{
    ViewBag.Title = "Login";
}


@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    @* Link de los estilos CSS de la pagina *@
    @Styles.Render("~/Content/css/login.css")

    <div class="form-horizontal">
        <h4 class="titleForm">Iniciar Sesión</h4>

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div class="subDiv">
        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Correo, new { htmlAttributes = new { @class = "InputEmail", @placeholder = "Correo Electrónico", @type = "email" } })
                @Html.ValidationMessageFor(model => model.Correo, "", new { @class = "" })
            </div>
        </div>



        <div class="form-group">
            <div class="col-md-10">
                @Html.EditorFor(model => model.Contrasena, new { htmlAttributes = new { @class = "InputPass", @placeholder = "Contraseña", @type = "password" } })
                @Html.ValidationMessageFor(model => model.Contrasena, "", new { @class = "text-danger" })
            </div>
        </div>
        @* ERROR de validacion *@
        @if (ViewBag.Error != null)
        {
            <div class="alert alert-danger" role="alert">
                @ViewBag.Error
            </div>
        }

        <div class="divButton">
            @* Boton de iniciar seccion *@
            <div>
                <input type="submit" value="Ingresar" class="btnSingIn" />
            </div>

        </div>
        @* Link a la pagina de Registro *@
        <div style="padding: 10px;" class="text-center">
            @Html.ActionLink("¿No tienes una cuenta? Registrate", "WebPage1", "Home")
        </div>
    </div>

    </div>
}

