@model CapaEntidad.CATEGORIA

@{
    ViewBag.Title = "EditarCategoria";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
<div style="margin-top: 50px;" class="d-flex flex-column align-items-center">


    <div style="width: 400px;" class="d-flex flex-column align-items-center shadow-lg p-3 mb-5 bg-body rounded">
        <h4>CATEGORIA DEL PRODUCTO</h4>
        <hr />
        @Html.ValidationSummary(true, "", new { @class = "text-danger" })
        @Html.HiddenFor(model => model.ID)

        <div class="d-flex flex-column align-items-center">
            <div class="col-md-10">
            @Html.LabelFor(model => model.Descripcion, htmlAttributes: new { @class = "control-label col-md-2" })
                @Html.EditorFor(model => model.Descripcion, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Descripcion, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input style="width: 100px; margin: 10px;" type="submit" value="GUARDAR" class="btn btn-primary"/>
            </div>
        </div>
        <div>
            <span style="width: 200px; margin: 5px;">@Html.ActionLink("REGRESAR", "TablaCategoria", "Home", new { @class = "btn btn-secondary" })</span>
        </div>
    </div>
</div>
}
